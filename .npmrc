# Security: Only allow specific trusted packages to run scripts
trusted-dependencies[]=sharp
trusted-dependencies[]=@clerk/shared
trusted-dependencies[]=unrs-resolver

# Ensure proper hoisting for these packages
public-hoist-pattern[]=*sharp*
public-hoist-pattern[]=*@clerk/shared*
public-hoist-pattern[]=*unrs-resolver*

# General optimizations
auto-install-peers=true
strict-peer-dependencies=false
node-linker=hoisted

# For CI/CD environments
prefer-frozen-lockfile=true

save-workspace-protocol=false
save-prefix=''
include-workspace-root=true
engine-strict=true
unsafe-perm=true
